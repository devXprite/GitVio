extends layout

block style 
    link(rel="stylesheet" href="/stylesheets/users.css")

block script 
    script(src="https://unpkg.com/@popperjs/core@2/dist/umd/popper.min.js")
    script(src="https://unpkg.com/tippy.js@6/dist/tippy-bundle.umd.js")
    script(src="javascripts/user.js")

block content
    header
        div
            img(src= avatarUrl)
            div.socialContainer
                if location
                    a(href= `https://www.google.com/maps/place/${location}`)!= locationIcon
                if websiteUrl
                    a(href= websiteUrl)!= linkIcon 
                if email 
                    a(href= `mailto:${email}`)!= emailIcon 
                if twitterUsername
                    a(href= `//twitter.com/${twitterUsername}`)!= twitterIcon
        div
            h2.name= name ? name : login
            a(href= `https://github.com/${login}`) 
                h3.username= login
            p.bio= bio ? bio : `${login} is a developer on Github with ${stats.repositories} Repositories and ${stats.followers} followers`
    main
        section
            h2 GitHub Activity
            .github
                div
                    p.number= stats.followers
                    p.activity Followers
                div
                    p.number= stats.following
                    p.activity Following
                div
                    p.number= stats.repositories
                    p.activity Repositories
                div
                    p.number= stats.gists
                    p.activity Gist
                div
                    p.number= stats.organizations
                    p.activity Organizations
                div
                    p.number= stats.sponsoring
                    p.activity Sponsoring
                div
                    p.number= stats.pullRequests
                    p.activity Pull Requests
                div
                    p.number= stats.issues
                    p.activity Issues
                div
                    p.number= stats.commits
                    p.activity Commits
                div
                    p.number= stats.contributedTo
                    p.activity contributed To
        section 
            h2 Languages Used 
            if (topLanguages)
                .popularLang
                    each langPercent, key in topLanguages
                        div 
                            div.langIconContainer 
                                img.langIcon(src= `https://cdn.jsdelivr.net/gh/PKief/vscode-material-icon-theme@main/icons/${key.toLowerCase()}.svg`, title= key alt=" " srcset="")
                            div 
                                p.langPercent= langPercent
                                p.activity= key
            else 
                p Not enough data  

        section.popularRepo
            h2 Popular Projects
            if (popularRepos.length > 0)
                .repoContainer
                    each repo in popularRepos
                        div
                            div.repoHeader
                                a(href= repo.url) 
                                    h3.repoName!= `${repoIcon}  ${repo.name}`
                                p.repoBio= repo.description ? repo.description : "No Description"
                            div.repoFooter
                                div
                                    p!= `${starIcon} ${repo.stargazerCount}`
                                    p!= `${forkIcon} ${repo.forkCount}`
                                    //- p= repo.diskUsage
                                div !{`<p class="repoLang" data-color="${repo.languageColor}">${repo.language}</p>`}
            else 
                p Not enough data                
        section.popularRepo
            h2 Contributed Projects
            if (contributedRepos.length > 0)
                .repoContainer
                    each repo in contributedRepos
                        div
                            div.repoHeader
                                a(href= repo.url) 
                                    h3.repoName!= `${repoIcon}  ${repo.name}`
                                p.repoBio= repo.description ? repo.description : "No Description"
                            div.repoFooter
                                div
                                    p!= `${starIcon} ${repo.stargazerCount}`
                                    p!= `${forkIcon} ${repo.forkCount}`
                                    //- p= repo.diskUsage
                                div !{`<p class="repoLang" data-color="${repo.languageColor}">${repo.language}</p>`}
            else 
                p Not enough data         
        section.contributionCalendar
            h2 Contribution Calendar 
            .calendarContainer
                each contribution in contributionCalendar
                    span.contributionBox(data-level= contribution.contributionLevel, data-date=contribution.date, data-count= contribution.contributionCount)
